@page
@model Assignment2.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    
    <form method="post">
        <div class="form-group">
                <label asp-for="Product.ID" class="control-label"></label>
                <input readonly asp-for="Product.ID" class="form-control" />
                <span asp-validation-for="Product.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input readonly asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input readonly asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input readonly asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input readonly asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <input readonly asp-for="Product.Category.Name" class="form-control" />
                <span asp-validation-for="Product.Category.Name" class="text-danger"></span>
            </div>
            @if (Model.Product.ImageUrl != null)
            {
                <div class="form-group">
                    <label class="control-label">Cover Image</label>
                    <div>
                        <img src="~/images/@TempData["image"]" alt="@TempData["image"]" style="width:46px;" class="mb-2" />
                    </div>
                </div>
            }
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-outline-info">Back to List</a>
    </form>
</div>
